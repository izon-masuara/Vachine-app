<%- include('./partial/header',{title : "Register Page"}) %>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Commercial Vaccine</a>
        </div>
    </nav>
    <h1 class="text-center mt-4">Admin</h1><br>

    <div class="d-flex bd-highlight">
        <div class="p-2 flex-grow-1 bd-highlight">
            <table class="table">
                <tr>
                    <th>Vaccine name</th>
                    <th>Country Manufacture</th>
                    <th>Base Material</th>
                    <th>Price</th>
                    <th>Effication</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                <% dataVaccine.forEach(el => { %>
                    <tr>
                        <td><%= el.vaccine_name %></td>
                        <td><%= el.country_manufacture %></td>
                        <td><%= el.base_material %></td>
                        <td><%= el.price %></td>
                        <td><%= el.effication %></td>
                        <td><%= el.description %></td>
                        <td><%= el.image %></td>
                        <th><a href="/user/edit/<%=el.id%>">Edit</a>|<a href="/user/delete/<%=el.id%>">Delete</a></th>
                    </tr>
                <% }) %>
            </table>
            <div class="d-flex align-items-stretch">
                <div class="p-2 flex-fill bd-highlight">
                    <div style="border: 2px solid black; padding: 20px;">
                        <form action="/user/admin/add" method="POST">
                            <h3>Tambah Kota</h3>
                            <label class="form-label">Kota</label><br>
                            <input type="text" name="city_name"><br><br>
                            <input class="btn btn-primary" type="submit" value="Add city">
                        </form>
                    </div>
                </div>
                <div class="p-2 flex-fill bd-highlight">
                    <div style="border: 2px solid black; padding: 20px;">
                        <form action="/user/vaccinetocity/admin/add" method="POST">
                            <h3>Add Vaccine To City</h3>
                            <br>
                            <select name="CityId">
                                <option disabled selected>--SELECT--</option>
                                <% dataCity.forEach(el => {%>
                                <option value="<%=el.id%>"><%= el.city_name %></option>
                                <% }) %>
                            </select>
                            <select name="VaccineId">
                                <option disabled selected>--SELECT--</option>
                                <% dataVaccine.forEach(el => {%>
                                <option value="<%=el.id%>"><%= el.vaccine_name %></option>
                                <% }) %>
                            </select><br><br>
                            <input class="btn btn-primary" type="submit" value="Add Vaccine To City">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex align-items-start flex-column bd-highlight mb-3">
            <div class="p-2 bd-highlight">
                <div style="border: 2px solid black; padding: 20px;">
                    <form action="vaccine/admin/add" method="POST">
                        <h3>Add Vaccine</h3>
                        <label class="form-label">Vaccine name</label><br>
                        <input class="form-control" type="text" name="vaccine_name"><br>
                        <label class="form-label">Country Manufacture</label><br>
                        <input class="form-control" type="text" name="country_manufacture"><br>
                        <label class="form-label">Base Material</label><br>
                        <input class="form-control" type="text" name="base_material"><br>
                        <label class="form-label">Effication</label><br>
                        <input class="form-control" type="number" name="effication"><br>
                        <label class="form-label">Price</label><br>
                        <input class="form-control" type="number" name="price"><br>
                        <label class="form-label">Image</label><br>
                        <input class="form-control" type="text" name="image"><br><br>
                        <label class="form-label">Description</label><br>
                        <textarea name="description" cols="30" rows="10"></textarea><br>
                        <input class="btn btn-primary" type="submit" value="Add Vaccine">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>